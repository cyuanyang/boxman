<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cyy.boxman.MainActivity">

    <com.cyy.boxman.views.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/upBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="上"/>
        <Button
            android:id="@+id/downBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@+id/upBtn"
            android:layout_centerHorizontal="true"
            android:text="下"/>
        <Button
            android:id="@+id/leftBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/upBtn"
            android:layout_marginTop="20dp"
            android:text="左"/>
        <Button
            android:id="@+id/rightBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/upBtn"
            android:layout_alignTop="@+id/leftBtn"
            android:text="右"/>
    </RelativeLayout>

</LinearLayout>
